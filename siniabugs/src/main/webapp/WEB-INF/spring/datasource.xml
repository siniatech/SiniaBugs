<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- need to start hsqldb: java -cp hsqldb-2.2.8.jar org.hsqldb.server.Server \-\-database.0 file:mydb \-\-dbname.0 xdb -->
	<bean id="myDataSource" class="org.apache.commons.dbcp.BasicDataSource"
		destroy-method="close">
		<property name="driverClassName" value="org.hsqldb.jdbcDriver" />
		<property name="url" value="jdbc:hsqldb:hsql://localhost:9001/xdb" />
		<property name="username" value="sa" />
		<property name="password" value="" />
	</bean>

	<bean id="mySessionFactory"
		class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
		<property name="dataSource" ref="myDataSource" />
		<property name="annotatedClasses">
			<list>
				<value>com.siniatech.siniabugs.model.Issue</value>
			</list>
		</property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect"> org.hibernate.dialect.HSQLDialect</prop>
				<prop key="hibernate.show_sql">true</prop>
				<prop key="hibernate.hbm2ddl.auto">create</prop>
			</props>
		</property>
	</bean>

	<bean id="myIssueDao" class="com.siniatech.siniabugs.dao.IssueDao">
		<constructor-arg>
			<ref bean="mySessionFactory" />
		</constructor-arg>
	</bean>

	<bean name="/issue/*.htm" class="com.siniatech.siniabugs.controller.IssueController">
		<constructor-arg>
			<ref bean="myIssueDao" />
		</constructor-arg>
	</bean>
</beans>
